#!/bin/sh
. ./common.sh
. ./distgeneric.sh
rm -r deb/opt/* deb/usr/share/applications/decoyfinder$APPEND.desktop 2> /dev/null
cp -r ${GENERIC} deb/opt/${NAME}${APPEND}

cp decoyfinder.desktop deb/usr/share/applications/decoyfinder$APPEND.desktop

sudo chown -R root:root deb/*
sudo chmod -R o+rx-w deb/*
sudo chmod a-x deb/opt/${NAME}${APPEND}/*

sudo dpkg --build deb decoyfinder${APPEND}-${VERSION}_all.deb

sudo chmod 777 *.deb

sudo chmod -R a+rw deb/*

rm -r deb/opt/* deb/usr/share/applications/decoyfinder${APPEND}.desktop
